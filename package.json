    "formatter"
  ],
  "author": "Anayo Oleru",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "babel-eslint": "^10.1.0",
    "babel-preset-latest": "^6.24.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.11",
    "mocha": "^10.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.0.1"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/register": "^7.9.0",
    "babel-plugin-transform-runtime": "^6.23.0"
  },
  "bugs": {
    "url": "https://github.com/AnayoOleru/currency-thousand-separator/issues"
